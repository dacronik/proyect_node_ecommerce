<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
    <title>Login</title>
</head>

<body>
    <!-- component -->
    <div class="bg-sky-100 flex justify-center items-center h-screen">
        <!-- Left: Image -->
        <div class="w-1/2 h-screen hidden lg:block">
            <img src="https://img.freepik.com/fotos-premium/imagen-fondo_910766-187.jpg?w=826" alt="Placeholder Image"
                class="object-cover w-full h-full">
        </div>
        <!-- Right: Login Form -->
        <div class="lg:p-36 md:p-52 sm:20 p-8 w-full lg:w-1/2">
            <h1 class="text-2xl font-semibold mb-4">Registrar</h1>


            <form method="POST" id="register-form">
                <!-- Username Input -->

                <div class="mb-4 bg-sky-100">
                    <label for="name" class="block text-gray-600">Nombre</label>
                    <input type="text" id="name" name="name"
                        class="w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500"
                        autocomplete="off">
                </div>
                <div class="mb-4 bg-sky-100">
                    <label for="lastName" class="block text-gray-600">Apellido</label>
                    <input type="text" id="lastName" name="lastName"
                        class="w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500"
                        autocomplete="off">
                </div>
                <div class="mb-4 bg-sky-100">
                    <label for="correo" class="block text-gray-600">Correo</label>
                    <input type="email" id="email" name="email"
                        class="w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500"
                        autocomplete="off">
                </div>

                <!-- Password Input -->
                <div class="mb-4">
                    <label for="password" class="block text-gray-800">Contraseña</label>
                    <input type="password" id="password" name="password"
                        class="w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500"
                        autocomplete="off">
                </div>
                <!-- register Button -->
                <button type="submit"
                    class="bg-red-500 hover:bg-blue-600 text-white font-semibold rounded-md py-2 px-4 w-full">Registrar</button>
            </form>
            <!-- Sign up  Link -->
            <div class="mt-6 text-green-500 text-center">
                <a href="/login" class="hover:underline">Login</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById('register-form').addEventListener('submit', async function (event) {
            event.preventDefault(); // Evita el envío del formulario por defecto

            const form = event.target;
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            try {
                const response = await fetch('/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (response.ok) {
                    // Mostrar alerta de éxito con los datos del usuario
                    Swal.fire({
                        icon: 'success',
                        title: 'Registro exitoso',
                        text: `Bienvenido, ${result.name} ${result.lastName}!`,
                        confirmButtonText: 'OK',
                        timer: 5000, // Duración de 5 segundos
                        timerProgressBar: true,
                        willClose: () => {
                            // Redirigir al login si es necesario
                            window.location.href = '/';
                        }
                    }).then(() => {
                        // Redirigir o limpiar el formulario si es necesario
                        form.reset();
                    });
                } else {
                    // Manejar el error devuelto
                    Swal.fire({
                        icon: 'error',
                        title: 'Error en el registro',
                        text: result.message,
                        confirmButtonText: 'OK'
                    });
                }
            } catch (error) {
                // Manejar errores de red u otros errores
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Ocurrió un problema al intentar registrar el usuario.',
                    confirmButtonText: 'OK'
                });
            }
        });
    </script>
</body>

</html>