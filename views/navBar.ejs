<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
</head>
<body>
    <nav class="bg-gradient-to-r from-indigo-700 via-blue-600 to-indigo-700 p-6 text-white shadow-lg">
        <div class="container mx-auto flex justify-between items-center">
            <!-- Logo y Título -->
            <div class="flex items-center space-x-4">
                <img src="img/logo.png" alt="Logo Dev-Toys" width="80" height="80" class="rounded-full border-4 border-yellow-500" />
                <a href="/" class="text-3xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-red-500 hover:text-yellow-300">
                    Dev-Toys
                </a>
            </div>
    
            <!-- Menú de Navegación -->
            <div class="hidden lg:flex items-center space-x-8 font-semibold">
                <a href="/" class="hover:text-yellow-300 transition duration-300 text-2xl font-[PressStart2P] hover:scale-105 hover:drop-shadow-[0_0_8px_#FF00FF]">
                    Inicio
                </a>
                <a href="/productos" class="hover:text-yellow-300 transition duration-300 text-2xl font-[PressStart2P] hover:scale-105 hover:drop-shadow-[0_0_8px_#00FF00]">
                    Productos
                </a>
                <a href="/about" class="hover:text-yellow-300 transition duration-300 text-2xl font-[PressStart2P] hover:scale-105 hover:drop-shadow-[0_0_8px_#00FFFF]">
                    Nosotros
                </a>
                <a href="/contact" class="hover:text-yellow-300 transition duration-300 text-2xl font-[PressStart2P] hover:scale-105 hover:drop-shadow-[0_0_8px_#FF00FF]">
                    Contacto
                </a>
                <a href="/carrito" class="relative flex items-center">
                    <img src="/icons/cart.svg" alt="Carrito de Compras" class="w-10 h-10 transform hover:scale-110 transition duration-200" />
                    <span id="cart-badge" class="absolute top-0 right-0 bg-red-600 text-white rounded-full text-xs px-2 py-1 font-bold">
                        <%= totalQuantity %>
                    </span>
                </a>
            </div>
    
            <!-- Botones de Login y Registro -->
            <div class="hidden lg:flex items-center space-x-4">
                <% if (typeof user !== 'undefined' && user) { %>
                    <span class="mr-4 text-lg font-semibold">Bienvenido, <%= user.name %> <%= user.lastName %></span>
                    <a href="/logout" class="bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-500 text-white py-2 px-6 rounded-full shadow-md transform hover:scale-105 transition duration-300">
                        Cerrar sesión
                    </a>
                <% } else { %>
                    <a href="/login" class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-500 text-white py-2 px-6 rounded-full shadow-md transform hover:scale-105 transition duration-300">
                        Login
                    </a>
                    <a href="/registro" class="bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-500 text-white py-2 px-6 rounded-full shadow-md transform hover:scale-105 transition duration-300">
                        Register
                    </a>
                <% } %>
            </div>
    
            <!-- Menú Hamburguesa -->
            <button id="hamburger-btn" class="lg:hidden text-white focus:outline-none text-3xl">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    
        <!-- Menú desplegable (pantallas pequeñas) -->
        <div id="mobile-menu" class="hidden flex flex-col items-center bg-indigo-800 lg:hidden p-4 space-y-4">
            <a href="/" class="text-white hover:text-yellow-300 text-lg">Inicio</a>
            <a href="/productos" class="text-white hover:text-yellow-300 text-lg">Productos</a>
            <a href="/about" class="text-white hover:text-yellow-300 text-lg">Nosotros</a>
            <a href="/contact" class="text-white hover:text-yellow-300 text-lg">Contacto</a>
            <a href="/carrito" class="text-white hover:text-yellow-300 text-lg">Carrito</a>
    
            <% if (typeof user !== 'undefined' && user) { %>
                <span class="text-white text-center">Bienvenido, <%= user.name %> <%= user.lastName %></span>
                <a href="/logout" class="bg-red-600 text-white py-2 px-4 rounded">Cerrar sesión</a>
            <% } else { %>
                <a href="/login" class="bg-green-600 text-white py-2 px-4 rounded">Login</a>
                <a href="/registro" class="bg-blue-600 text-white py-2 px-4 rounded">Register</a>
            <% } %>
        </div>
    </nav>
    <script>
        document.getElementById('hamburger-btn').addEventListener('click', () => {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
    </script>
</body>
</html>