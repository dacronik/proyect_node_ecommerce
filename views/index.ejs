<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Spice&display=swap" rel="stylesheet">
    <title>Fav-tienda</title>
</head>
<body>
    <style>
        body {
            background-image: url('img/fondo.jpg');
            background-position: center;
            background-size: cover;
        }
    </style>

    <%- include('navBar') %>
    
    <!-- Carrusel -->
    <div class="mt-12 mr-12 ml-12">
        <div class="swiper">
            <div class="swiper-wrapper"> 
                <div class="swiper-slide">
                    <div class="bg-white rounded-lg shadow-lg">
                        <img src="img/E-sport.png" alt="" class="w-full h-full object-cover">
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="bg-white rounded-lg shadow-lg">
                        <img src="img/consolas.png" alt="" class="w-full h-full object-cover">
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="bg-white rounded-lg shadow-lg">
                        <img src="img/banner.png" alt="" class="w-full h-full object-cover">
                    </div>
                </div>
            </div>
            <!-- Botones de navegación (opcional) -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            <!-- Paginación (opcional) -->
            <div class="swiper-pagination"></div>
        </div>
    </div>

    <div class="container mx-auto p-4">
      <% groupedProducts.forEach(group => { %>
        <div class="mb-8">
          <!-- Franja con el nombre de la categoría -->
          <div class="text-2xl font-bold p-2 rounded-t bg-gradient-to-r from-blue-500 via-purple-600 to-pink-500 text-white" style="font-family: 'Bungee Spice', cursive;">
            <%= group.category %>
          </div>

          <!-- Cards de productos -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mt-4">
            <% group.products.forEach(product => { %>
              <div class="bg-gradient-to-b from-gray-900 to-black shadow-lg rounded-lg overflow-hidden hover:scale-105 hover:shadow-neon transition-transform duration-300 ease-in-out">
                <img src="/uploads/<%= product.imagen1 %>" alt="<%= product.name %>" class="w-full h-48 object-cover">
                <div class="p-4 text-white">
                  <h3 class="text-xl font-semibold mb-2" style="font-family: 'Bungee Spice', cursive;">
                    <%= product.name %>
                  </h3>
                  <p class="text-green-400 text-lg font-bold">$<%= product.price.toLocaleString('es-CL') %> Pesos</p>
                  <p class="text-gray-300"><%= product.description %></p>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      <% }) %>
    </div>
      <%- include('footer') %>

    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
        const swiper = new Swiper('.swiper', {
            // Optional parameters
            direction: 'horizontal',
            loop: true,
          
            // If we need pagination
            pagination: {
              el: '.swiper-pagination',
            },
            autoplay: {
                delay: 3000, // Tiempo en milisegundos antes de pasar a la siguiente imagen
                disableOnInteraction: false, // El autoplay no se desactiva cuando el usuario interactúa
            },
          
            // Navigation arrows
            navigation: {
              nextEl: '.swiper-button-next',
              prevEl: '.swiper-button-prev',
            },
          
            // And if we need scrollbar
            scrollbar: {
              el: '.swiper-scrollbar',
            },
          });
    </script>
    
</body>
</html>